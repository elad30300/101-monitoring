<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/patientFragment">

    <fragment
        android:id="@+id/patientFragment"
        android:name="com.example.a101_monitoring.ui.PatientsListFragment"
        android:label="fragment_patient_list"
        tools:layout="@layout/fragment_patient_list" >
        <action
            android:id="@+id/action_patientFragment_to_registerPatientFragment"
            app:destination="@id/registerPatientFragment"
            app:enterAnim="@anim/fragment_fade_enter" />
        <action
            android:id="@+id/action_patientFragment_to_patientManualMeasurmentsFragment"
            app:destination="@id/patientManualMeasurmentsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/registerPatientFragment"
        android:name="com.example.a101_monitoring.ui.RegisterPatientFragment"
        android:label="register_patient_fragment"
        tools:layout="@layout/register_patient_fragment" />
    <fragment
        android:id="@+id/patientManualMeasurmentsFragment"
        android:name="com.example.a101_monitoring.ui.PatientManualMeasurmentsFragment"
        android:label="patient_manual_measurments_fragment"
        tools:layout="@layout/patient_manual_measurments_fragment" >
        <argument
            android:name="patientId"
            app:argType="integer" />
    </fragment>
</navigation>